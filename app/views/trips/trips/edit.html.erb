<h1>Change It Up</h1>

<%= form_tag(trip_update_path(@trip), method: "patch") do %>
  <p>Trip Details</p><%= select_tag(:ride_type, options_for_select(trip_list), {class: "trip-field"}) %>

  <p>Strating Station</p><%= select_tag(:rtd_location_id, options_for_select(rtd_location_list), {class: "rtd-field"}) %>
  <p>Seats Available</p><%= select_tag(:seats_available, options_for_select(seats_list), {class: "seat-field"}) %>
  <p>Destination</p><%= select_tag(:destination_point, options_for_select(destination_list), {class: "destination-field"}) %>

  <%= submit_tag('SEND IT', class: "button") %>
<% end %>
