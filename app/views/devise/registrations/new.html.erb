<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "First Name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "Last Name" %>
  </div>


  <div class="field">
    <%= f.label :pass %><br />
    <%= f.text_field :pass, autocomplete: "Mountain Mass" %>
  </div>

  <div class="field">
    <%= f.label :sport_type %><br />
    <%= f.text_field :sport_type, autocomplete: "ski/snowboard/other" %>
  </div>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.text_field :role, autocomplete: "passenger or driver" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :picture %><br />
    <%= f.file_field :picture, autocomplete: "Profile Pic" %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, autocomplete: "Tell us about you" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
